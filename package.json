{
  "name": "dashy",
  "private": true,
  "version": "0.1.0",
  "description": "A customizable personal dashboard app.",
  "main": "index.js",
  "scripts": {
    "prebuild": "lerna run clean",
    "build": "webpack",
    "build:debug": "node --inspect --debug-brk ./node_modules/webpack/bin/webpack.js",
    "build:dev": "yarn build --env.env=dev",
    "build:dev:analyze": "yarn build --env.env=dev --env.addons=bundleanalyze --env.addons=bundlebuddy",
    "heroku-postbuild": "yarn build -- --env.env=prod --progress",
    "nuke": "rm -r node_modules; for d in packages/*/node_modules; do echo $d; rm -r $d; done",
    "watch:dev": "yarn build -- --watch --env.env=dev",
    "watch:prod": "yarn build -- --watch --env.env=prod",
    "watch": "yarn build -- --watch",
    "launch": "lerna run launch",
    "start": "./node_modules/.bin/lerna run start",
    "clean": "lerna run clean",
    "browse": "lerna run browse"
  },
  "dependencies": {
    "lerna": "^3.4.3",
    "webpack-merge": "^4.1.4",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.0",
    "favicons-webpack-plugin": "^0.0.9",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack-node-externals": "^1.7.2",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2"
  },
  "engines": {
    "node": "^v8.12.0",
    "yarn": "^1.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sparkboom/dashy"
  },
  "keywords": [
    "node",
    "heroku",
    "hapi"
  ],
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Matthew McLeod",
  "contributors": [
    "Matthew McLeod <matt@mattmcleod.co.uk>"
  ],
  "license": "MIT"
}
